    successDiv.innerHTML = 'ðŸŽ‰ Your artistic journey begins! We\'ll contact you within 24 hours.';
    document.body.appendChild(successDiv);
    
    setTimeout(() => {
      document.body.removeChild(successDiv);
    }, 3000);
    
