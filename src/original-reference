    setSelectedArtist(artist);
    setModalOpen(true);
  };

  const openBookingModal = () => {
    setSelectedArtist(null);
    setModalOpen(true);
  };

  const handleLike = () => {
    setIsLiked(!isLiked);
    setLikes(prev => isLiked ? prev - 1 : prev + 1);
  };

